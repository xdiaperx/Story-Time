import org.eclipse.swt.widgets.Display;
import org.eclipse.swt.widgets.Shell;
import org.eclipse.swt.widgets.Label;
import org.eclipse.swt.SWT;
import org.eclipse.swt.widgets.Text;
import org.eclipse.swt.widgets.Button;
import org.eclipse.wb.swt.SWTResourceManager;

public class LoginClass {

	protected Shell shell;
	private Text txtUsername;
	private Text txtPassword;

	/**
	 * Launch the application.
	 * @param args
	 */
	public static void main(String[] args) {
		try {
			LoginClass window = new LoginClass();
			window.open();
		} catch (Exception e) {
			e.printStackTrace();
		}
	}

	/**
	 * Open the window.
	 */
	public void open() {
		Display display = Display.getDefault();
		createContents();
		shell.open();
		shell.layout();
		while (!shell.isDisposed()) {
			if (!display.readAndDispatch()) {
				display.sleep();
			}
		}
	}

	/**
	 * Create contents of the window.
	 */
	protected void createContents() {
		shell = new Shell();
		shell.setSize(450, 300);
		shell.setText("SWT Application");
		shell.setLayout(null);
		
		Label lblStoryTime = new Label(shell, SWT.NONE);
		lblStoryTime.setFont(SWTResourceManager.getFont(".SF NS Text", 17, SWT.NORMAL));
		lblStoryTime.setBounds(170, 26, 94, 28);
		lblStoryTime.setText("Story Time");
		
		Label lblUsername = new Label(shell, SWT.NONE);
		lblUsername.setFont(SWTResourceManager.getFont(".SF NS Text", 15, SWT.NORMAL));
		lblUsername.setBounds(74, 87, 79, 20);
		lblUsername.setText("Username");
		
		Label lblPassword = new Label(shell, SWT.NONE);
		lblPassword.setFont(SWTResourceManager.getFont(".SF NS Text", 15, SWT.NORMAL));
		lblPassword.setBounds(74, 123, 79, 20);
		lblPassword.setText("Password");
		
		txtUsername = new Text(shell, SWT.BORDER);
		txtUsername.setBounds(159, 88, 213, 19);
		
		txtPassword = new Text(shell, SWT.BORDER);
		txtPassword.setBounds(159, 124, 213, 19);
		
		Button btnLogin = new Button(shell, SWT.NONE);
		btnLogin.setBounds(112, 169, 94, 28);
		btnLogin.setText("Login");
		
		Button btnSignUp = new Button(shell, SWT.NONE);
		btnSignUp.setBounds(170, 220, 94, 28);
		btnSignUp.setText("Sign Up");
		
		Button btnReset = new Button(shell, SWT.NONE);
		btnReset.setBounds(224, 169, 94, 28);
		btnReset.setText("Reset");
		
		Label label = new Label(shell, SWT.SEPARATOR | SWT.HORIZONTAL);
		label.setBounds(64, 203, 313, 2);
		
		Label label_1 = new Label(shell, SWT.SEPARATOR | SWT.HORIZONTAL);
		label_1.setBounds(64, 60, 321, 2);

	}
}
